{% extends 'base.html.twig' %}

{% block title %}Detalle de Artist{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Artist</h1>
        </div>
        <div class="col text-end">
            <a href="{{ path('app_artist_crud_index') }}" class="btn btn-secondary">‚Üê Volver al listado</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-bordered align-middle mb-0">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ artist.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ artist.name }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

   <div class="row mt-4">
        <div class="col d-flex gap-2">    
            <a href="{{ path('app_artist_crud_edit', {'id': artist.id}) }}"  class="btn btn-primary">Editar</a>

            {{ include('artist_crud/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
