{% extends 'base.html.twig' %}

{% block title %}RecordLabel{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="h3">Sello</h1>
        </div>
        <div class="col text-end">
            <a href="{{ path('app_record_label_index') }}"  class="btn btn-secondary">‚Üê Volver al listado</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">    
                    <table class="table table-bordered align-middle mb-0">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 150px;">Id</th>
                                <td>{{ record_label.id }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Name</th>
                                <td>{{ record_label.name }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
   <div class="row mt-4">
        <div class="col d-flex gap-2">
            <a href="{{ path('app_record_label_edit', {'id': record_label.id}) }}" class="btn btn-primary">Editar</a>

            {{ include('record_label/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
