{% extends 'base.html.twig' %}

{% block title %}Listado de Usuarios{% endblock %}

{% block body %}
<div class="container my-4">
    {% include 'partials/_alert_messages.html.twig' %}
    <div class="row mb-3">
        <div class="col">
            <h1 class="h3">Listado de Usuarios</h1>
        </div>
        <div class="col text-end">
            <a href="{{ path('app_user_crud_new') }}" class="btn btn-primary">+ Nuevo Usuario</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Nombre</th>
                                <th>Roles</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in pagination %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{user.roles}}</td>
                                <td class="text-end">
                                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary">Ver</a>
                                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">Editar</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted">No hay usuarios registrados.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <div class="navigation mt-3  d-flex justify-content-end">
                        {{ knp_pagination_render(pagination) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
