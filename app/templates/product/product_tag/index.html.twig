{% extends 'base.html.twig' %}

{% block title %}ProductTag index{% endblock %}

{% block body %}
<div class="container my-4">
    {% include 'partials/_alert_messages.html.twig' %}
    <div class="row mb-3">
        <div class="col">
            <h1>Tags</h1>
        </div>
        <div class="col text-end">
            <a href="{{ path('app_product_product_tag_new') }}" class="btn btn-primary">+ Crear Tag</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-striped table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for product_tag in pagination %}
                                <tr>
                                    <td>{{ product_tag.id }}</td>
                                    <td>{{ product_tag.name }}</td>
                                    <td>
                                        <a href="{{ path('app_product_product_tag_show', {'id': product_tag.id}) }}" class="btn btn-sm btn-outline-secondary">Ver</a>
                                        <a href="{{ path('app_product_product_tag_edit', {'id': product_tag.id}) }}" class="btn btn-sm btn-outline-primary">Editar</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center text-muted">No hay tags creados</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>
  
                    <div class="navigation mt-3  d-flex justify-content-end">
                        {{ knp_pagination_render(pagination) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
    
{% endblock %}
